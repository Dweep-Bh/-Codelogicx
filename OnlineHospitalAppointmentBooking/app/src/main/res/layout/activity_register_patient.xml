<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/doctor_male"
    android:orientation="vertical"
    tools:context=".RegisterPatient">

    <EditText
        android:id="@+id/firstname"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_margin="10dp"
        android:hint="Enter the first name"
        android:textStyle="bold"
        android:inputType="textMultiLine"
        android:lines="5"
        android:maxLines="10"
        android:padding="10dp" />

    <EditText
        android:id="@+id/lastname"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_margin="10dp"
        android:hint="Enter the last name"
        android:textStyle="bold"
        android:inputType="textMultiLine"
        android:lines="5"
        android:maxLines="10"
        android:padding="10dp" />

    <EditText
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_margin="10dp"
        android:hint="Enter the user name"
        android:textStyle="bold"
        android:inputType="textMultiLine"
        android:lines="5"
        android:maxLines="10"
        android:padding="10dp" />
    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_margin="10dp"
        android:hint="Enter the password"
        android:textStyle="bold"
        android:inputType="textMultiLine"
        android:lines="5"
        android:maxLines="10"
        android:padding="10dp" />
    <EditText
        android:id="@+id/address"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_margin="10dp"
        android:hint="Enter the address"
        android:textStyle="bold"
        android:inputType="textMultiLine"
        android:lines="5"
        android:maxLines="10"
        android:padding="10dp" />

    <EditText
        android:id="@+id/phonenumber"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_margin="10dp"
        android:hint="Enter the phonenumber"
        android:textStyle="bold"
        android:inputType="textMultiLine"
        android:lines="5"
        android:maxLines="10"
        android:padding="10dp" />

    <EditText
        android:id="@+id/emailid"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_margin="10dp"
        android:hint="Enter the emailid"
        android:textStyle="bold"
        android:inputType="textMultiLine"
        android:lines="5"
        android:maxLines="10"
        android:padding="10dp" />

    <Button
        android:id="@+id/registration"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_margin="20dp"
        android:layout_gravity="center"
        android:text="Registration"
        android:textColor="@color/white"
        android:textStyle="bold" />
</LinearLayout>